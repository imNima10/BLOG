    <main class="content">
      <header class="admin-header">
        <h1>داشبورد مدیریت</h1>
        <button class="logout-btn">خروج</button>
      </header>

      <section class="stats">
        <div class="stat-card">
          <h3>👥 تعداد کاربران</h3>
          <p>123</p>
        </div>
