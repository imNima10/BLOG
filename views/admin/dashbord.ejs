          <h3>📰 تعداد پست‌ها</h3>
          <p>47</p>
        </div>
      </section>

      <section class="latest-posts">
        <h2>🆕 آخرین پست‌ها</h2>
        <table>
          <thead>
            <tr>
              <th>عنوان</th>
              <th>نویسنده</th>
              <th>تاریخ</th>
              <th>عملیات</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>چگونه با Node.js وب‌سایت بسازیم</td>
              <td>nima</td>
              <td>۱۳۳۲/۱۱/۱۱</td>
              <td>
                <a href="#" class="btn small view">مشاهده</a>
                <a href="#" class="btn small delete">حذف</a>
              </td>
            </tr>
          </tbody>
        </table>
      </section>

      <section class="latest-users">
        <h2>👤 آخرین کاربران ثبت‌نام‌شده</h2>
        <table>
          <thead>
            <tr>
              <th>پروفایل</th>
              <th>نام کاربری</th>
              <th>ایمیل</th>
              <th>نقش</th>
              <th>عملیات</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><img src="profile1.png" alt="profile" class="avatar"></td>
              <td>nima</td>
              <td>nima@example.com</td>
              <td>admin</td>
              <td>
                <a href="#" class="btn small danger">مسدود</a>
                <a href="#" class="btn small">تغییر نقش</a>
              </td>
            </tr>
          </tbody>
        </table>
      </section>
    </main>
  </div>
